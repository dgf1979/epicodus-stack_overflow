
<%= bootstrap_form_for(@user) do |f| %>
  <%= render "layouts/errors", object: @user %>

    <%= f.text_field :name %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
    <%= f.check_box :admin %>
  <div class="actions">
    <%= f.submit class: "btn btn-block btn-default" %>
  </div>
<% end %>
